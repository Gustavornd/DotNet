@page "/NovoIngrediente"

@inject IngredienteService service

<div class="row m-5">
    <div class="col-5 bg-light m-2 justify-content-start">
        <div class="p-3 mb-3 bg-primary text-white text-center">Novo Produto</div>
        <EditForm Model="@Ingr">
            <div class="form-group">
                <label for="nome">Id</label>
                <input type="text" id="id" class="form-control" @bind-value="@Ingr.Id" />
            </div>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input type="text" id="nome" class="form-control" @bind-value="@Ingr.Nome" />
            </div>
            <div class="form-group">
                <label for="nome">Categoria</label>
                <input type="text" id="categoria" class="form-control" @bind-value="@Ingr.Categoria" />
            </div>
            <div class="form-group">
                <label for="nome">Alergicos</label>
                <input type="text" id="alergicos" class="form-control" @bind-value="@Ingr.Alergicos" />
            </div>

            <!-- Informação Nutricional -->
            <div class="form-group">
                <label for="infNutri">Informação Nutricional</label>
                <input type="text" id="infNutri" class="form-control" @bind-value="@novaInformacaoNutricional" />
                <button class="btn btn-primary mt-2" @onclick="AdicionarInformacaoNutricional">Adicionar</button>
            </div>

            <!-- Exibir lista de informações nutricionais -->
            <ul class="list-group">
                @foreach (var info in Ingr.InfNutri)
                {
                    <li class="list-group-item">
                        @info
                        <button class="btn btn-danger btn-sm float-right" @onclick="() => RemoverInformacaoNutricional(info)">Remover</button>
                    </li>
                }
            </ul>

            <div class="text-center p-3 mb-3">
                <button class="btn btn-info" @onclick="AdicionarIngrediente">Adicionar Ingrediente</button>
            </div>
        </EditForm>
        <NavLink href="/">Voltar à Página Incial</NavLink>

    </div>

</div>


@code{
    public Ingrediente Ingr {get; set;} = new Ingrediente {InfNutri = new List<string>()};
    private string? novaInformacaoNutricional { get; set; }

    private void AdicionarInformacaoNutricional()
    {
        if (!string.IsNullOrWhiteSpace(novaInformacaoNutricional))
        {
            Ingr.InfNutri.Add(novaInformacaoNutricional);
            novaInformacaoNutricional = string.Empty;
        }
    }

    private void RemoverInformacaoNutricional(string info)
    {
        Ingr.InfNutri.Remove(info);
    }

    private async Task AdicionarIngrediente(){
        await service.AddIngredienteAsync(Ingr);
        Ingr = new Ingrediente { InfNutri = new List<string>() };
    }
}